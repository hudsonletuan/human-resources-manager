@{
    ViewData["Title"] = "Login/Signup";
}

<!DOCTYPE html>
<html>
    <head>
        <meta property="og:image" content="https://tuanle.top/wp-content/uploads/2024/03/hrmanager-featured-img.png" />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:description" content="One of the four for your business. An application of your choice." />
        <link rel="stylesheet" href="~/css/Dashboard.css" />
    </head>
    <body>
        <!-- Modal sign in -->
        <div class="modal fade" id="logInModal" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="logInModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="signin-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="section">
                        <div class="container">
                            <div class="row full-height justify-content-center">
                                <div class="col-12 text-center align-self-center">
                                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                                        <h6 class="mb-0 pb-3">
                                            <span class="login-span">Log In </span>
                                            <span class="signup-span">Sign Up</span>
                                        </h6>
                                        <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
                                        <label for="reg-log"></label>
                                        <div class="card-3d-wrap mx-auto">
                                            <div class="card-3d-wrapper">
                                                <div class="card-front">
                                                    <div class="center-wrap">
                                                        <div class="section text-center">
                                                            <h4 class="mb-4 pb-3">Log In</h4>
                                                            <div class="form-group">
                                                                <input type="email" name="logemail" class="form-style" placeholder="Your Email" id="logemail" role="presentation" autocomplete="off">
