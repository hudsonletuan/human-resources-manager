@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
    <head>
        <meta property="og:image" content="https://tuanle.top/wp-content/uploads/2024/03/hrmanager-featured-img.png" />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:description" content="One of the four for your business. An application of your choice." />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Jost">
        <link rel="stylesheet" href="~/css/Dashboard.css" />
    </head>
    <body>
        <div class="text-center dashboard-options">
        <div class="mb-2" style="display: flex; align-items: flex-start; justify-content: center; gap: 8px;">
                <button class="db-btn hr-btn" onclick="redirectToHR()">
                    <p>HUMAN RESOURCES</p>
                    <i class="bi bi-people" style="font-size: 60px;"></i>
                </button>
                <button class="db-btn ps-btn">
                    <p>PAYROLL SYSTEM</p>
                    <i class="bi bi-cash-coin" style="font-size: 60px;"></i>
                </button>
            </div>
            <div style="display: flex; align-items: flex-start; justify-content: center; gap: 8px;">
                <button class="db-btn pm-btn">
                    <p>PRODUCT MANAGEMENT</p>
                    <i class="bi bi-boxes" style="font-size: 60px;"></i>
                </button>
                <button class="db-btn dc-btn">
                    <p>DISCUSSION</p>
                    <i class="bi bi-chat-left-dots" style="font-size: 60px;"></i>
                </button>
            </div>
        </div>
        <script src="~/js/EmployeeJS.js"></script>
    </body>
</html>